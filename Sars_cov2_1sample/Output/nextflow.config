profiles {

    // ---- Conda profile ----
    conda {
        process {
            executor = 'local'
            cpus = 2
            memory = '1 GB'
            conda = 'environment.yml'  // ðŸ‘ˆ tell Nextflow which environment to use
        }

        params {
            outdir = "results"
        }

        conda {
            enabled = true
            useMamba = true  // faster conda solver
        }

        process {
            withName: ".*" {
                memory = '1 GB'
                cpus   = 1
            }
        }
    }

    // ---- Standard (no conda) ----
    standard {
        process {
            executor = 'local'
            cpus = 2
            memory = '1 GB'
        }

        params {
            outdir = "results"
        }
    }
}

